    "name": "va-gov/cms",
    "description": "The CMS for VA.gov",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "drupal/media_entity_generic": "^1.0",
        "acquia/drupal-spec-tool": "^2.0"
    },
    "require": {
        "bower-asset/blazy": "^1.8",
