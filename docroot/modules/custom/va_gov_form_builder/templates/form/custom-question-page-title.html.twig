{% extends '@va_gov_form_builder/form/base/single-column-with-buttons.html.twig' %}

{% set page_id = 'page-title' %}
{% set page_heading = 'Customize the question for the response' %}

{% block main_content %}
  <section class="form-builder-content-section form-builder-content-section--page-title">
    <h3 class="form-builder-content-section__heading">What is the question or statement?</h3>
    <p>
      Guidelines for crafting a question
    </p>

    <div class="form-builder-content-section__field-title">
      {{ form.field_title }}
    </div>

    <div class="form-builder-content-section__field-digital-form-body-text">
      {{ form.field_digital_form_body_text }}
    </div>
  </section>
{% endblock %}

{% block after_buttons %}
  {# render rest of form so it functions properly #}
  {{ form|without(
    'field_title',
    'field_digital_form_body_text',
    'actions',
  )}}
{% endblock %}
