{% extends '@va_gov_form_builder/form/base/single-column-with-buttons.html.twig' %}

{% set page_id = 'response-kind' %}
{% set page_heading = 'Select response kind' %}

{% block main_content %}
  <section class="form-builder-content-section form-builder-content-section--response-kind">
    <p>We'll add the question/statement over the course of a few screens.</p>

    <div class="form-builder-content-section__response-kind">
      {{ form.response_kind }}
    </div>
  </section>
{% endblock %}

{% block after_buttons %}
  {# render rest of form so it functions properly #}
  {{ form|without(
    'response_kind',
    'actions',
  )}}
{% endblock %}
