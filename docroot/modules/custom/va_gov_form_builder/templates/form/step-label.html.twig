{#
/**
 * @file
 * Template for Form Builder step page: Step Label
 */
#}
{% extends '@va_gov_form_builder/form/base/single-column-with-buttons.html.twig' %}

{% set page_id = 'step-label' %}
{% set page_heading = 'Start building this step' %}

{% block main_content %}
  <section class="form-builder-content-section form-builder-content-section--step-label">
    <h3>Begin by providing a step label.</h3>
    <p>
      Provide a simple, plain language Step label that describes what information this step is collecting.
      This could be the main subject of the question or questions you are asking, such as: Provide your
      time off, Location of an event, or other subject.
    </p>

    <div class="form-builder-content-section__field-title">
      {{ form.field_title }}
    </div>
  </section>
  <section class="form-builder-content-section form-builder-content-section--example">
    {{ form.preview }}
  </section>
{% endblock %}

{% block after_buttons %}
  {# render rest of form so it functions properly #}
  {{ form|without(
    'field_title',
    'preview',
    'actions',
  )}}
{% endblock %}
