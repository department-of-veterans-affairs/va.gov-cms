{% set title = alert.field_alert_title|field_value %}

{% set id = alert.field_alert_content['#items'][0].entity.id.value %}

{% set expander = alert.field_alert_content['#items'][0].entity.field_text_expander.value %}

{% set wysiwyg = {
    '#type': 'processed_text',
    '#text': alert.field_alert_content['#items'][0].entity.field_wysiwyg.value,
    '#format': 'rich_text',
  } %}

{% set type = alert.field_alert_type.0['#markup']|lower %}

{% if type == "information" %}

	{% set type = "info" %}

{% endif %}

{% if alert.field_alert_content['#items'][0].entity.status.value == "1" %}
	<div data-template="blocks/alert" data-entity-id="{{ id }}" class="usa-alert usa-alert-{{ type }}" role="alert">
		<div class="usa-alert-body">
			<h2 class="usa-alert-heading vads-u-font-size--h3">
				{{ title }}
			</h2>

			{% if expander == empty %}
				{{ wysiwyg }}
			{% endif %}

			{% if expander %}
				<div data-alert-box-title="{{ title }}" data-label="{{ expander }}" class="form-expanding-group borderless-alert additional-info-container">
					<div class="additional-info-title">
						{{ expander }}
					</div>

					{% if wysiwyg %}
						<div class="additional-info-content usa-alert-text" hidden>{{ wysiwyg }}</div>
					{% endif %}
				</div>
			{% endif %}
		</div>
	</div>
{% endif %}
